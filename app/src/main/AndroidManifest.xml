<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.creditpartner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.BannerActivity"
            android:parentActivityName=".Activities.MainActivity"></activity>
        <activity android:name=".Activities.SplashActivity"></activity>
        <activity
            android:name=".Activities.DynamicAddActivity"
            android:parentActivityName=".Activities.AddAdminsActivity" />
        <activity android:name=".Activities.AddExpenseActivity" />
        <activity
            android:name=".Activities.AddAdminsActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.PaisaTrackerActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.CompanyFormActivity" />
        <activity android:name=".Activities.CreditReportActivity" />
        <activity
            android:name=".Activities.ReferAndEarnActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.AddCompanyActivity"
            android:parentActivityName=".Activities.ProductDetailActivity" />
        <activity
            android:name=".Activities.CompanyWebsiteActivity"
            android:parentActivityName=".Activities.ProductDetailActivity" />
        <activity
            android:name=".Activities.MyAccountActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.ProductDetailActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.VerifyInfoActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CustomerInfoActivity">

        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>