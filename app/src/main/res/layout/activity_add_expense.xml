<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddExpenseActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/add_expense_bar"
            layout="@layout/app_bar" />

        <EditText
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_value"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:focusable="false"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:gravity="center_horizontal"
            android:hint="Enter Category"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/expense_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_expense_bar"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="â‚¹ Enter Amount"
            android:textSize="20dp" />




        <EditText
            android:id="@+id/expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:hint="Enter Date" />


        <Button
            android:id="@+id/add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expense_date"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttons"
            android:text="Add"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />


    </RelativeLayout>
</ScrollView>