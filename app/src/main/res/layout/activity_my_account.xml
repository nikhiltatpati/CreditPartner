<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Activities.MyAccountActivity">


    <ProgressBar
        android:id="@+id/load_account_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/account_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_account_bar"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"

        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_account_bar"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Loading..."
                android:textSize="23dp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Email:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Loading..."
                android:textSize="23dp" />

            <TextView
                android:id="@+id/number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Number:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Loading..."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/privilege_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Privilege:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/privilege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Loading..."
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/my_account_bar"
        layout="@layout/app_bar" />


</RelativeLayout>