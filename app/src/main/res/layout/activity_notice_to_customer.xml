<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.ApplyFormActivity">

    <include
        android:id="@+id/noticebar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/noti_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Notification name" />

        <EditText
            android:id="@+id/noti_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Notification Text"
/>
        <Button
            android:id="@+id/noti_image_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:elevation="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:hint="Upload Image" />

        <ImageView
            android:id="@+id/view_noti_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/send_noti"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="SEND"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:background="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>