<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.creditpartner.Activities.MyAccountActivity">


    <ProgressBar
        android:id="@+id/load_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/account_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/user_account_bar"
        android:background="@color/colorAccent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/account_image"
        android:layout_marginTop="-63dp"
        android:src="@drawable/cplogo" />

    <TextView
        android:id="@+id/useraccount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_image"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        />

    <TextView
        android:id="@+id/useraccount_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useraccount_privilege"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/useraccount_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useraccount_email"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/useraccount_privilege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useraccount_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />


    <include
        android:id="@+id/user_account_bar"
        layout="@layout/app_bar" />


</RelativeLayout>