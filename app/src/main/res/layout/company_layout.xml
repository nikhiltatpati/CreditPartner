<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:elevation="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
        android:id="@+id/company_select"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_below="@id/company_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:text="Apply Now"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tata" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/company_image"
        android:text="Kotak 811"
        android:textSize="17dp" />

    <Button
        android:id="@+id/company_view_details"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_below="@id/company_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:text="View Details"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/percent_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6%"
        android:layout_toRightOf="@id/company_image"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest Rate"
        android:layout_toRightOf="@id/company_image"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_below="@id/percent_rate"/>


    <View
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/interest_rate"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/minimum_balance_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 10000"

        android:layout_toRightOf="@id/vertical_line"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/minimum_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest Rate"
        android:layout_toRightOf="@id/vertical_line"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_below="@id/percent_rate"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/company_view_details">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/key_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Features and Benefits"
                android:textSize="20dp"
                android:layout_margin="7dp"/>

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/key_text"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray"/>




            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</androidx.cardview.widget.CardView>