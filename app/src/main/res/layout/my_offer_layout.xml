<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ad_details" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/noti_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:src="@color/colorAccent" />


        <TextView
            android:id="@+id/noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/noti_image"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/noti_date"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Notification TItle"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/noti_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noti_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@id/noti_image"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/noti_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:text="Date"
            android:textSize="16dp" />







    </RelativeLayout>

</androidx.cardview.widget.CardView>