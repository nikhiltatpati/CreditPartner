<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ad_details" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTint="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ad_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@color/colorAccent" />


        <TextView
            android:id="@+id/ad_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ad_image"
            android:layout_marginTop="13dp"
            android:text="Customer Name"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/ad_clicks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_customer_name"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/ad_image"
            android:text="Clicks-"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ad_clicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_customer_name"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/ad_clicks_text"
            android:text="--"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_customer_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"

            android:layout_toRightOf="@id/ad_clicks"
            android:text="/"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ad_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_customer_name"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/divider"
            android:layout_marginLeft="7dp"
            android:text="Type-"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_customer_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/ad_type_text"
            android:text="--"
            android:textSize="18dp" />





    </RelativeLayout>

</androidx.cardview.widget.CardView>